<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Ícono del comando -->
        <ImageView
            android:id="@+id/commandIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_command"
            android:layout_marginEnd="16dp" />

        <!-- Información del comando -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/commandTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Título del Comando"
                android:textColor="@color/san_marino"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/commandDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripción breve del comando"
                android:textColor="@color/eden"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
